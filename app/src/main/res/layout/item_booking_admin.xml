<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.43" />

        <ImageView
            android:id="@+id/imageview_booking_admin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toTopOf="@+id/button_konfirmasi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_lapangan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Nama Lapangan"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_booking_admin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_kategori_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Kategori : "
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_booking_admin"
            app:layout_constraintRight_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_lapangan" />

        <TextView
            android:id="@+id/textview_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="kategori"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_lapangan" />

        <TextView
            android:id="@+id/textview_jam_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Jam : "
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_booking_admin"
            app:layout_constraintRight_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_kategori_caption" />

        <TextView
            android:id="@+id/textview_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="02:00"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_kategori_caption" />

        <TextView
            android:id="@+id/textview_durasi_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Durasi : "
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_booking_admin"
            app:layout_constraintTop_toBottomOf="@+id/textview_jam_caption" />

        <TextView
            android:id="@+id/textview_durasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="jam"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_jam_caption" />

        <TextView
            android:id="@+id/textview_harga_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Harga : "
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_booking_admin"
            app:layout_constraintTop_toBottomOf="@+id/textview_durasi" />

        <TextView
            android:id="@+id/textview_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="100.000"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_durasi" />

        <TextView
            android:id="@+id/textview_status_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Status : "
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_booking_admin"
            app:layout_constraintTop_toBottomOf="@+id/textview_harga" />

        <TextView
            android:id="@+id/textview_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="dibayar"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_harga" />

        <TextView
            android:id="@+id/textview_user_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="Pemesan : "
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/button_konfirmasi"
            app:layout_constraintLeft_toRightOf="@+id/imageview_booking_admin"
            app:layout_constraintTop_toBottomOf="@+id/textview_status" />

        <TextView
            android:id="@+id/textview_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="fikri"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/button_konfirmasi"
            app:layout_constraintLeft_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textview_status" />

        <Button
            android:id="@+id/button_konfirmasi"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/border_curve_green"
            android:text="konfirmasi"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>